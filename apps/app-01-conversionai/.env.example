# Shopify App Credentials (from Shopify Partner Dashboard)
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# Shopify App Scopes (comma-separated)
SCOPES=read_products,read_orders,read_themes,read_analytics,read_customers

# App URL (Railway URL or your custom domain)
HOST=https://your-app.railway.app

# Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (Railway provides this automatically)
REDIS_URL=redis://default:password@host:6379

# Claude API (from Anthropic Console - https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Resend API (from Resend Dashboard - https://resend.com/api-keys)
RESEND_API_KEY=your_resend_api_key_here

# Environment
NODE_ENV=development

# Optional: Error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Analytics
# MIXPANEL_TOKEN=your_mixpanel_token_here
