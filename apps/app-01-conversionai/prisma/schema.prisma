generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id              String           @id @default(cuid())
  domain          String           @unique
  accessToken     String
  scope           String
  isActive        Boolean          @default(true)
  plan            String           @default("free")
  primaryGoal     String?
  lastAnalysis    DateTime?
  email           String?
  installedAt     DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  recommendations Recommendation[]
  metrics         ShopMetrics[]
  subscriptions   Subscription[]

  @@index([domain])
  @@index([plan])
}

model Subscription {
  id              String    @id @default(cuid())
  shopId          String
  plan            String
  status          String
  billingOn       DateTime?
  trialEndsOn     DateTime?
  shopifyChargeId String?   @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  shop            Shop      @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([status])
}

model Recommendation {
  id              String    @id @default(cuid())
  shopId          String
  title           String
  description     String
  category        String
  impactScore     Int
  effortScore     Int
  priority        Int
  estimatedUplift String
  estimatedROI    String
  reasoning       String
  implementation  String
  codeSnippet     String?
  mockupUrl       String?
  status          String    @default("pending")
  implementedAt   DateTime?
  userRating      Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  shop            Shop      @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([status])
  @@index([category])
  @@index([priority])
}

model ShopMetrics {
  id                    String   @id @default(cuid())
  shopId                String
  conversionRate        Float
  avgOrderValue         Float
  cartAbandonmentRate   Float
  mobileConversionRate  Float?
  desktopConversionRate Float?
  totalSessions         Int?
  totalOrders           Int?
  totalRevenue          Float?
  recordedAt            DateTime @default(now())
  shop                  Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([recordedAt])
}

// Shopify Session storage (required for OAuth)
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  @@index([shop])
}
