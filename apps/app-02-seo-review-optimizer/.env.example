# Shopify App Credentials (from Shopify Partner Dashboard)
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# Shopify App Scopes (comma-separated)
SCOPES=read_products,write_products,read_content,write_content

# App URL (Railway URL for production, localhost for dev)
SHOPIFY_APP_URL=http://localhost:3000

# Database (Railway provides this automatically in production)
DATABASE_URL=postgresql://user:password@localhost:5432/reviewboost

# Redis (Railway provides this automatically in production)
REDIS_URL=redis://localhost:6379

# Claude API (from Anthropic Console - https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Resend API (from Resend Dashboard - https://resend.com/api-keys)
RESEND_API_KEY=your_resend_api_key_here

# Environment
NODE_ENV=development

# Cron Secret (for monthly usage reset endpoint)
CRON_SECRET=your_random_secret_here
